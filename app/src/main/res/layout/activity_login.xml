<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.thiago.carrinhodecompras.Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/textLogin"
        android:textSize="40dp"
        android:textIsSelectable="true"
        android:layout_above="@+id/editLogin"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editLogin"
        android:nestedScrollingEnabled="true"
        android:minWidth="256dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:hint="Seu email"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha"
        android:id="@+id/textSenha"
        android:textSize="40dp"
        android:textIsSelectable="true"
        android:layout_above="@+id/editSenha"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editSenha"
        android:nestedScrollingEnabled="true"
        android:minWidth="256dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="85dp"
        android:hint="Sua senha"
        android:textSize="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DECIDIR O QUE POR AQUI SE FOR POR ALGO"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:id="@+id/buttonRegistrar"
        android:textSize="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView"
        android:onClick="irRegistrar"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logar"
        android:id="@+id/buttonLogar"
        android:textSize="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="logar"
        />
</RelativeLayout>
